@model LeaveManagement.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg bg-light p-4">
        <h2 class="text-center text-primary"><i class="bi bi-pencil-square"></i> Edit Employee</h2>
        <p class="text-center text-muted">Modify employee details and save changes.</p>

        <div class="card bg-white p-4 shadow-sm">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"><i class="bi bi-person"></i> Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"><i class="bi bi-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label fw-bold"><i class="bi bi-shield-lock"></i> Password</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold"><i class="bi bi-person-badge"></i> Role</label>
                    <select asp-for="Role" class="form-select">
                        <option value="Admin">Admin</option>
                        <option value="Employee">Employee</option>
                        <option value="Manager">Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LeaveBalance" class="form-label fw-bold"><i class="bi bi-calendar-check"></i> Leave Balance</label>
                    <input asp-for="LeaveBalance" type="number" class="form-control" placeholder="Enter leave balance" />
                    <span asp-validation-for="LeaveBalance" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
