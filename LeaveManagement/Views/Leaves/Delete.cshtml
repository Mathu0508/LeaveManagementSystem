@model LeaveManagement.Models.Leave

@{
    ViewData["Title"] = "Delete Leave";
}

<div class="container mt-5">
    <div class="card shadow-lg bg-light p-4">
        <h2 class="text-center text-danger"><i class="bi bi-trash"></i> Delete Leave Request</h2>
        <p class="text-center text-muted">Are you sure you want to delete this leave request? This action cannot be undone.</p>

        <div class="card bg-white p-4 shadow-sm">
            <h4 class="text-dark"><i class="bi bi-file-earmark-text"></i> Leave Details</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-calendar-event"></i> Start Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-calendar-event"></i> End Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-card-list"></i> Leave Type</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-info-circle"></i> Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-chat-left-text"></i> Reason</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Reason)</dd>

                <dt class="col-sm-3 fw-bold text-primary"><i class="bi bi-person"></i> Employee ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Id)</dd>
            </dl>

            <div class="alert alert-warning text-center">
                <strong><i class="bi bi-exclamation-triangle-fill"></i> Warning:</strong> This action is permanent and cannot be reversed.
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
